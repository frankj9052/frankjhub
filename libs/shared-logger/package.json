{
  "name": "@frankjhub/shared-logger",
  "version": "0.0.1",
  "main": "./dist/index.esm.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.esm.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.esm.d.ts",
      "import": "./dist/index.esm.js",
      "default": "./dist/index.esm.js"
    }
  },
  "dependencies": {
    "@frankjhub/shared-schema": "0.0.4",
    "winston": "3.17.0",
    "@sentry/node": "9.24.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "nx": {
    "projectType": "library",
    "sourceRoot": "libs/shared-logger",
    "targets": {
      "deploy": {
        "dependsOn": [
          "build"
        ],
        "executor": "nx:run-commands",
        "options": {
          "command": "npm publish libs/shared-logger/dist --access public",
          "cwd": "."
        }
      }
    }
  }
}
