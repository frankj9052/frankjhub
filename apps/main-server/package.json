{
  "name": "@frankjhub/main-server",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "projectType": "application",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/main-server/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/main-server/src/main.ts",
          "tsConfig": "apps/main-server/tsconfig.app.json",
          "assets": [
            "apps/main-server/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "serve:dev": {
        "executor": "nx:run-commands",
        "options": {
          "command": "cross-env NODE_ENV=development tsx watch apps/main-server/src/main.ts --ignore node_modules --ignore dist",
          "cwd": "."
        }
      },
      "serve:prod": {
        "executor": "nx:run-commands",
        "options": {
          "command": "nx build main-server --configuration=production && cross-env NODE_ENV=production node apps/main-server/dist/main.js",
          "cwd": "."
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@frankjhub/main-server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@frankjhub/main-server:build:development"
          },
          "production": {
            "buildTarget": "@frankjhub/main-server:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  }
}
