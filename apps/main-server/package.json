{
  "name": "@frankjhub/main-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "typeorm:dev": "tsx -r reflect-metadata -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/config/data-source.ts",
    "typeorm:prod": "tsx -r reflect-metadata -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d dist/config/data-source.js",
    "migration:generate": "cross-env NODE_ENV=development npm run typeorm:dev migration:generate src/migrations/AutoMigration",
    "migration:run": "cross-env NODE_ENV=development npm run typeorm:dev migration:run",
    "migration:run:prod": "cross-env NODE_ENV=production npm run typeorm:prod migration:run",
    "migration:revert": "cross-env NODE_ENV=development npm run typeorm migration:revert",
    "migration:revert:prod": "cross-env NODE_ENV=production npm run typeorm migration:revert"
  },
  "nx": {
    "projectType": "application",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/main-server/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/main-server/src/main.ts",
          "tsConfig": "apps/main-server/tsconfig.app.json",
          "assets": [
            "apps/main-server/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@frankjhub/main-server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@frankjhub/main-server:build:development"
          },
          "production": {
            "buildTarget": "@frankjhub/main-server:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "typeorm": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsx scripts/typeorm-command.ts",
          "cwd": "."
        }
      },
      "migration:generate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsx scripts/typeorm-command.ts migration:generate apps/main-server/src/migrations/AutoMigration",
          "cwd": "."
        }
      },
      "migration:run": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsx scripts/typeorm-command.ts migration:run",
          "cwd": "."
        }
      },
      "migration:run:prod": {
        "executor": "nx:run-commands",
        "options": {
          "command": "NODE_ENV=production tsx scripts/typeorm-command.ts migration:run",
          "cwd": "."
        }
      },
      "migration-revert": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsx scripts/typeorm-command.ts migration:revert",
          "cwd": "."
        }
      },
      "migration-revert-prod": {
        "executor": "nx:run-commands",
        "options": {
          "command": "NODE_ENV=production tsx scripts/typeorm-command.ts migration:revert",
          "cwd": "."
        }
      }
    }
  }
}
