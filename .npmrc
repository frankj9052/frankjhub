# 强化执行 engines 字段
engine-strict=true

# ✅ 保证安装时不使用 legacy peer deps（避免 React/Next 等冲突）
legacy-peer-deps=false

# ✅ 总是使用精确版本锁定（避免自动升级带来不可控问题）
save-exact=true

# ✅ 关闭 audit 和 fund 信息，避免 CI 噪音
audit=false
fund=false

# ✅ 限制网络重试（避免 npm install 无限卡住）
fetch-retries=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000